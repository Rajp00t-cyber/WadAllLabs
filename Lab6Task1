<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Even or Odd</title>
</head>
<body>
  <h2>Even or Odd Number Checker</h2>

  <script>
    let number = prompt("Enter a number:");
    number = parseInt(number);

    if (isNaN(number)) {
      alert("Invalid input!");
    } else if (number % 2 === 0) {
      alert(number + " is EVEN");
    } else {
      alert(number + " is ODD");
    }
  </script>
</body>
</html>
