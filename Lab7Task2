<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Max & Min - for...of</title>
</head>
<body>
  <h2>Task 2: Max & Min using for...of</h2>
  <pre id="output"></pre>

  <script>
    const arr = [3, 1, 4, 1, 5, 9, 2, 6, 5];
    let max = arr[0];
    let min = arr[0];

    for (let num of arr) {
      if (num > max) max = num;
      if (num < min) min = num;
    }

    document.getElementById("output").textContent = 
      `Array: [${arr}]\nMaximum: ${max}\nMinimum: ${min}`;
    console.log("Max:", max, "Min:", min);
  </script>
</body>
</html>
