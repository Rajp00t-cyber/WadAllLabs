  <title>Vowel Counter Function</title>
</head>
<body>
  <h2>Task 5: Count Vowels (Regular Function)</h2>
  <pre id="output"></pre>

  <script>
    function countVowels(str) {
      const vowels = ['a', 'e', 'i', 'o', 'u'];
      let count = 0;
      str = str.toLowerCase();

      for (let char of str) {
        if (vowels.includes(char)) {
          count++;
        }
      }
      return count;
    }

    const text = "Hello World JavaScript";
    const result = countVowels(text);

    document.getElementById("output").textContent = 
      `String: "${text}"\nVowels Count: ${result}`;
    console.log("Vowels in '" + text + "':", result);
  </script>
</body>
